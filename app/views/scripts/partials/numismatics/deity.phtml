        <ul>
            <li>
                <?php echo $this->attrib1; ?>
            </li>

            <?php if (!is_null($this->attrib2)): ?>
                <li>
                    <?php echo $this->attrib2; ?>
                </li>
            <?php endif; ?>

            <?php if (isset($this->attrib3)): ?>
                <li>
                    <?php echo $this->attrib3; ?>
                </li>
            <?php endif; ?>
        </ul>

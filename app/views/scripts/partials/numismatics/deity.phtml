$this->headTitle('Details of ' . $this->name . ' personified');
$this->headMeta($this->curUrl(), 'dc.identifier')
    ->headMeta('Daniel Pett', 'dc.creator')
    ->headMeta('The Portable Antiquities Scheme', 'dc.publisher')
    ->headMeta('CC BY-SA', 'dc.rights');
